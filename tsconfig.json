{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules", "public"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"]
    }
  }
}
