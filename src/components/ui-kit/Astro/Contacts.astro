---
import { Icon } from 'astro-icon/components';
---

<div class="about-header__contacts">
  <button class="header-button icon_button">
    <Icon name="telegram" />
  </button>
  <button class="header-button" id="email-button">Связаться с нами</button>
</div>

<style>
  .about-header__contacts {
    padding: 30px 0 20px;
    grid-column: 1 / span 12;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    column-gap: 10px;
  }
  .icon_button {
    width: 30px;
  }
  .header-button {
    position: relative;
    height: 30px;
    padding: 4px 12px;
    border-radius: 64px;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    outline: none;
    /* width: 30px; */
    cursor: pointer;
    color: var(--White, #fff);
    text-align: center;

    /* 16/medium */
    font-family: Inter;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 20px; /* 125% */

    transition-property: color;
    transition-duration: var(--transition-duration-base, 300ms);
    transition-timing-function: var(--transition-easing-base, ease-in-out);

    &:hover {
      background: rgba(255, 255, 255, 0.3);
    }
    &:active {
      background: rgba(255, 255, 255, 0.4);
    }
  }
  .header-button svg {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
  }
</style>

<script>
  const button = document.getElementById('email-button');

  button.addEventListener('click', () => window.open('mailto:Admiral@inno.tech'));
</script>
