---
import TimelineItemComponent from './TimelineItem.astro';
import { type TimelineItem } from '@types';
const { items } = Astro.props;
---

<div class="timeline">
  {
    items.map((item: TimelineItem, idx: number) => {
      const isLastEl = idx > items.length - 4;
      return <TimelineItemComponent item={item} isLastEl={isLastEl} />;
    })
  }
</div>

<style>
  .timeline {
    padding: 100px 0 155px;
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
</style>
