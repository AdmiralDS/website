---
import Footer from "../../footer/index.astro";
import Description from './description/index.astro';
import UsersList from './users/index.astro';
---

<div class="users-content">
  <Description />
  <UsersList />
  <Footer />
</div>

<style>
  .users-content {
    position: relative;
    min-height: 500px;
    padding: 20px 3.9%;
    background: var(--White, #fff);
  }

  .users-content::before{
    content: "";
    position: absolute;
    width: 100%;
    top: -12px;
    left: 0;
    height: 12px;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    background: var(--White, #fff);
  }
</style>
