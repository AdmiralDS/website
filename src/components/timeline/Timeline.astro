---
import TimelineItemComponent from './TimelineItem.astro';
import { TimelineItem } from "../../@types/common.ts";
const { items } = Astro.props;
---

<div class="timeline">
    {items.map((item: TimelineItem) => <TimelineItemComponent item={item} />)}
</div>

<style>
  .timeline {
    padding: 100px 0 175px;
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
</style>
