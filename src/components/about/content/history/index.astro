---
import { Icon } from "astro-icon";
import history from "./history.json";
import { IconArrowLeft, IconArrowRight } from "../../../ui-kit";
import Timeline from '../../../timeline/Timeline.astro';
---

<div class="block-container">
  <h2 class="block-title dark">история развития</h2>
  <Timeline items={history} />
  <div class="arrows">
    <button class="arrow-button" disabled>
      <Icon name="arrow-left" />
    </button>
    <button class="arrow-button">
      <Icon name="arrow-right" />
    </button>
  </div>
</div>

<style>
  .arrows {
    display: flex;
    gap: 5px;
  }

  .arrow-button {
    min-width: 30px;
    min-height: 30px;
    outline: none;
    cursor: pointer;
    color: #35383A;
    border: 2px solid #E6EAF0;
    border-radius: 50%;
    position: relative;
    display: flex;
    background-color: white;
    align-items: center;
  }

  .arrow-button:disabled {
    color: #E6EAF0;
    cursor: not-allowed;
  }

  .arrow-button svg {
    width: 15px;
    height: 15px;
  }
</style>
