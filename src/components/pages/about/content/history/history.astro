---
import { Icon } from 'astro-icon/components';
import history from './history.json';
import { TimelineAstro } from '@components/ui-kit/Astro';
---

<div class="block-container">
  <h2 class="block-title dark">история развития</h2>
  <TimelineAstro items={history} />
  <div class="arrows">
    <button class="arrow-button" disabled>
      <Icon name="arrow-left" />
    </button>
    <button class="arrow-button">
      <Icon name="arrow-right" />
    </button>
  </div>
</div>

<style>
  .arrows {
    display: flex;
    gap: 5px;
  }

  .arrow-button {
    min-width: 30px;
    min-height: 30px;
    outline: none;
    cursor: pointer;
    color: #35383a;
    border: 1px solid #e6eaf0;
    border-radius: 50%;
    position: relative;
    display: flex;
    background-color: white;
    align-items: center;
  }

  .arrow-button:disabled {
    color: #e6eaf0;
    cursor: not-allowed;
  }

  .arrow-button svg {
    width: 15px;
    height: 15px;
  }
</style>
