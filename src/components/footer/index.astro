---
import { Button, IconArrowLeft, IconArrowRight } from '@components/ui-kit/Svelte';
---

<div class="footer">
  <div class="buttons-block">
    <Button variant="secondary" style="padding: 12px; height: auto;">
      <IconArrowLeft />
    </Button>
    <Button variant="primary" style="padding: 12px; height: auto;">
      <IconArrowRight />
      Пользователи
    </Button>
  </div>
  <span class="copyright">© Группа компаний «Иннотех», 2020-2024</span>
</div>
<style>
  .buttons-block {
    display: flex;
    justify-content: flex-end;
    column-gap: 10px;
    width: 100%;
    padding: 20px 0;
    border-bottom: 1px solid #e6eaf0;
  }

  .copyright {
    color: var(--Dark_grey, #35383a);
    font-family: Inter;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 15px; /* 125% */
  }
